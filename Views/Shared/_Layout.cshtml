<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mi Proyecto ASP.NET Core</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav>
            <ul>
                <li><a asp-area="" asp-controller="Home" asp-action="Index">Inicio</a></li>
                <!-- Agregar más enlaces según sea necesario -->
            </ul>
        </nav>
    </header>
    <main role="main" class="container">
        @RenderBody()
    </main>
    <footer>
        <p>&copy; @DateTime.Now.Year - Mi Proyecto ASP.NET Core</p>
    </footer>
    <script src="~/js/site.js"></script>
</body>
</html>